#include <iostream>
#include <windows.h>
#include <cmath>

using namespace std;

HANDLE hConsole = GetStdHandle(STD_OUTPUT_HANDLE);

void setColor(int color)
{
    SetConsoleTextAttribute(hConsole, color);
}

void gotoxy(int x, int y)
{
    COORD pos;
    pos.X = x;
    pos.Y = y;
    SetConsoleCursorPosition(hConsole, pos);
}

int main()
{
    system("cls");

    // kolory jak w tęczy
    int colors[] = {12, 6, 14, 10, 11, 9, 13};
    const int layers = 7;

    int centerX = 40;
    int centerY = 25;
    int radius = 20;

    // rysowanie od lewej do prawej
    for (int x = -radius; x <= radius; x++)
    {
        for (int layer = 0; layer < layers; layer++)
        {
            int r = radius - layer;

            if (r * r - x * x < 0) continue;

            int y = (int)sqrt(r * r - x * x);

            int drawX = centerX + x;
            int drawY = centerY - y;

            setColor(colors[layer]);
            gotoxy(drawX, drawY);

            // małe kolorowe znaki jak na zdjęciu
            cout << char(254);

            Beep(500 + layer * 80, 20);
        }

        Sleep(55); // umiarkowane tempo
    }

    setColor(7);
    gotoxy(0, 29);
    return 0;
}

#include <iostream>
using namespace std;

int main() {
    const int n = 7;
    int tab_kow[n];

    
    cout << "Podaj 7 elementow tablicy:\n";
    for (int i = 0; i < n; i++) {
        cout << "tab[" << i << "] = ";
        cin >> tab_kas[i];
    }

    // Wyswietlenie wczytanej tablicy
    cout << "\nWyglad wprowadzonej tablicy:\n";
    for (int i = 0; i < n; i++) {
        cout << tab_kas[i] << " ";
    }
    cout << endl;

    // ===== SORTOWANIE PRZEZ WSTAWIANIE =====
    for (int i = 1; i < n; i++) {
        int bufor = tab_kow[i];   // zapamiętujemy element
        int j = i;

        while (j > 0 && tab_kow[j - 1] > bufor) {
            tab_kow[j] = tab_kow[j - 1];  // przesuwamy element w prawo
            j--;
        }

        tab_kow[j] = bufor;  // wstawiamy element na właściwe miejsce
    }

    // Wyswietlenie posortowanej tablicy
    cout << "\nPosortowana rosnaco tablica:\n";
    for (int i = 0; i < n; i++) {
        cout << tab_kow[i] << " ";
    }
    cout << endl;

    return 0;
}
